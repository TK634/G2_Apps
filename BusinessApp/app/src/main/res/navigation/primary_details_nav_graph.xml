<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/reservation_list_fragment">

    <fragment
        android:id="@+id/reservation_list_fragment"
        android:name="com.example.newactivity.reservationListFragment"
        android:label="reservationListFragment">
        <action
            android:id="@+id/show_reservation_detail"
            app:destination="@id/reservation_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/reservation_detail_fragment"
        android:name="com.example.newactivity.reservationDetailFragment"
        android:label="reservation_detail"
        tools:layout="@layout/fragment_reservation_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>