<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00BFA5</item>
        <item name="colorPrimaryVariant">#FFD600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFD600</item>
        <item name="colorSecondaryVariant">#FFE770</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:typeface">normal</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#005247</item>
        <item name="colorAccent">#FFD600</item>
        <item name="actionMenuTextColor">#FFFFFF</item>

    </style>

    <style name="Theme.NewActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>